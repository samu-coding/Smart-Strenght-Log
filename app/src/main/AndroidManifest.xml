<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartstrengthlog">

    <application
        android:name="util.SmartStrengthLogAPI"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartStrengthLog">
        <activity android:name=".ui.ProgressTracking.ExportData"></activity>
        <activity android:name=".ui.ProgressTracking.RmCalculator" />
        <activity android:name=".ui.ProgressTracking.PerformanceStats" />
        <activity android:name=".ui.ProgressTracking.ExerciseSelectionProgress" />
        <activity android:name=".ui.ProgressTracking.RoutineSelectionProgress" />
        <activity android:name=".WorkoutSessionLog" />
        <activity android:name=".NewWorkoutCreator" />
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_main_menu" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".CreateAccountActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- -Export csv data -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.smartstrenghtlog.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider> <!--  -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>