<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutSessionLog"
    android:background="@drawable/gradient_bg_in">


    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto_slab_bold"
        android:gravity="center"
        android:text="Exercise 1"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/exercise_notes"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:textSize="12sp"/>


    <TextView
        android:id="@+id/set_number_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="Set 1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/prev_marcas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Previous Session lift:"
        android:maxLines="1"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reps_TAG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:text="@string/reps_TAG"
            android:maxLines="1" />


        <TextView
            android:id="@+id/prev_reps_set1"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:hint="@string/no_data"
            android:maxLines="1" />

        <TextView
            android:id="@+id/weight_TAG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:text="@string/_TAG"
            android:maxLines="1" />

        <TextView
            android:id="@+id/prev_weight_set_1"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:hint="@string/no_data"
            android:maxLines="1" />
        <TextView
            android:id="@+id/rir_TAG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:text="@string/rir_TAG"
            android:maxLines="1" />

        <TextView
            android:id="@+id/prev_rir_1"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/no_data"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/reps_set_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:autofillHints=""
            android:hint="@string/number_reps"
            android:inputType="number"
            android:maxLines="1" />

        <EditText
            android:id="@+id/weight_set_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:hint="@string/weight"
            android:inputType="number"
            android:maxLines="1" />

        <EditText
            android:id="@+id/rir_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="RIR"
            android:inputType="number"
            android:maxLines="1" />

        <ImageView
            android:id="@+id/RIR_info"
            android:layout_width="18dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:hint="RIR"
            android:inputType="number"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/question_mark_icon"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/set_number_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="Set 2"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/prev_marcas_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Previous Session lift:"
        android:maxLines="1"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reps_TAG2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:text="@string/reps_TAG"
            android:maxLines="1" />

        <TextView
            android:id="@+id/prev_reps_set2"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:hint="@string/no_data"
            android:maxLines="1" />

        <TextView
            android:id="@+id/weight_TAG2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:text="@string/_TAG"
            android:maxLines="1" />

        <TextView
            android:id="@+id/prev_weight_set_2"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:hint="@string/no_data"
            android:maxLines="1" />
        <TextView
            android:id="@+id/rir_TAG2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:text="@string/rir_TAG"
            android:maxLines="1" />

        <TextView
            android:id="@+id/prev_rir_2"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/no_data"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/reps_set_2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:hint="@string/number_reps"
            android:inputType="number"
            android:maxLines="1" />

        <EditText
            android:id="@+id/weight_set_2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:hint="@string/weight"
            android:inputType="number"
            android:maxLines="1" />

        <EditText
            android:id="@+id/rir_2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="RIR"
            android:inputType="number"
            android:maxLines="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/set_number_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="Set 3"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/prev_marcas_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Previous Session lift:"
        android:maxLines="1"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reps_TAG3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:text="@string/reps_TAG"
            android:maxLines="1" />

        <TextView
            android:id="@+id/prev_reps_set3"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:hint="@string/no_data"
            android:maxLines="1" />

        <TextView
            android:id="@+id/weight_TAG3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:text="@string/_TAG"
            android:maxLines="1" />

        <TextView
            android:id="@+id/prev_weight_set_3"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:hint="@string/no_data"
            android:maxLines="1" />

        <TextView
            android:id="@+id/rir_TAG3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:text="@string/rir_TAG"
            android:maxLines="1" />

        <TextView
            android:id="@+id/prev_rir_3"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/no_data"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/reps_set_3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:autofillHints=""
            android:hint="@string/number_reps"
            android:inputType="number"
            android:maxLines="1" />

        <EditText
            android:id="@+id/weight_set_3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:hint="@string/weight"
            android:inputType="number"
            android:maxLines="1" />

        <EditText
            android:id="@+id/rir_3"
            android:layout_width="100dp"

            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="RIR"
            android:inputType="number"
            android:maxLines="1" />

    </LinearLayout>

    <Button
        android:id="@+id/button_next_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="guardarSetsEjercicio"
        android:text="Next Exercise" />


</LinearLayout>